extends layout

block content
  header
    h1
      | #{title}
    section
      h2 Login
      form(method="POST", action="/login")
        label
          | Login:
          input(type='text', name='username', maxlength='100', placeholder='username')
        label
          | Password:
          input(type='password', name='password', maxlength='100')
        button(type='submit') Submit
